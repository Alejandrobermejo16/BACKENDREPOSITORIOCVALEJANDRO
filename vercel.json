{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/createUser.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/logguin.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/calUser.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/resetCalories.js",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {
      "path": "/api/resetCalories",  // Debe comenzar con /
      "schedule": "* * * * *"        // Configura el horario que necesites
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/users/create",
      "dest": "/api/createUser.js"
    },
    {
      "src": "/api/users/logguin",
      "dest": "/api/logguin.js"
    },
    {
      "src": "/api/users/cal",
      "dest": "/api/calUser.js"
    },
    {
      "src": "/api/resetCalories",
      "dest": "/api/resetCalories.js"
    }
  ]
}

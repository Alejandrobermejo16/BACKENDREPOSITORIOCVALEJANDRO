{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/createUser.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/logguin.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/calUser.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/tareaProgramada.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/tareaProgramada.js": {
      "schedule": "*/1 * * * *" // Ejecutar cada minuto
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/users/create",
      "dest": "/api/createUser.js"
    },
    {
      "src": "/api/users/logguin",
      "dest": "/api/logguin.js"
    },
    {
      "src": "/api/users/cal",
      "dest": "/api/calUser.js"
    },
    {
      "src": "/api/tareaProgramada",
      "dest": "/api/tareaProgramada.js"
    }
  ]
}
